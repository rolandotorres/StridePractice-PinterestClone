

<p id="notice"><%= notice %></p>

  <div id="pins">
  
      <% @pins.each do |pin| %>
    <div class="box">
     
        <%= link_to image_tag(pin.image.url( :medium)), pin %><br/>
        <strong>Description: </strong><%= pin.description %><br/>
        <strong>Upload by: </strong><%= pin.user.name if pin.user %>
        <% if pin.user == current_user %>
        <br/>
        <%= link_to 'Edit', edit_pin_path(pin),class: 'btn btn-warning btn-xs' %>&nbsp;
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        <% end %>
        <br/>
      </div>
    <% end %>
  </div>

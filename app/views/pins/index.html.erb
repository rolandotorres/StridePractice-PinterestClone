<%= render 'home/jumbotron' unless user_signed_in? %>
<div class="center">
    <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
  <div id="pins" class="transitions-enabled">
  
      <% @pins.each do |pin| %>
     
    <div class="box">
       <div class="panel panel-default">
        <div class="panel-heading">
        <%= link_to image_tag(pin.image.url( :medium)), pin %><br/>
        </div>
      <div class="panel-body">
        <strong>Description: </strong><%= pin.description %><br/>
        <strong>Pinned by: </strong><%= pin.user.name if pin.user %>
     
        <div id="listpinfooter" class="panel-footer">
        <% if pin.user == current_user %>
        
        <%= link_to 'Edit', edit_pin_path(pin),class: 'btn btn-warning btn-xs' %>&nbsp;
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        
        <% end %>
        </div>
         </div>
       </div>
      </div>
    <% end %>
  </div>



<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h1>Listing Pins</h1>
  </div>
<div class="panel-body">
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %>&nbsp;</td>
        <td><%= image_tag pin.image.url( :thumb) %>&nbsp;</td>
        <td><%= link_to 'Show', pin, class: 'btn btn-primary' %>&nbsp;</td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin),class: 'btn btn-info' %>&nbsp;</td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path, class: 'btn btn-success' %>
</div>